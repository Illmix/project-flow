{
  "compilerOptions": {
    // ---- Basic Options ----
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // ---- For Prisma ----
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}